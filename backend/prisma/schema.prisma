generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Titulo {
  nome       String @db.VarChar(255)
  clubeId    String
  conquistas Int
  clube      Clube  @relation(fields: [clubeId], references: [id], onDelete: Cascade)

  @@id([nome, clubeId])
  @@map("titulos")
}

model Clube {
  id             String                               @id @default(cuid())
  nome           String                               @db.VarChar(255)
  tecnico        String                               @db.VarChar(255)
  presidente     String                               @db.VarChar(255)
  anoFundacao    Int
  principalRival String?                              @db.VarChar(255)
  estadio        String                               @db.VarChar(255)
  titulos        Titulo[]
  localizacao    Unsupported("Geometry(Point, 4326)")
  escudo_url     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("clubes")
}
